<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorAccent">@color/lime</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecyclerViewCell">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_base</item>
    </style>

    <style name="TreatmentRow">
        <item name="android:layout_marginBottom">@dimen/font_small</item>
    </style>

    <style name="TagSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginTop">@dimen/font_small</item>
        <item name="android:layout_marginBottom">@dimen/font_small</item>
    </style>

    <style name="OverviewLabelRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UserDefLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="UserDefDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.9</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_base</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

</resources>
